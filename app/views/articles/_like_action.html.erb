<div class="article__item-like-container" id="js-like-action">
  <% if like&.persisted? %>
    <%= link_to article.likes.count, article_like_path(article, like), method: :delete, remote: true, class: 'article__item-like-count' %>
    <%= link_to article_like_path(article, like), method: :delete, remote: true, class: 'article__item-like-btn liked' do %>
      <%= icon('fas', 'check') %>
    <% end %>
  <% else %>
    <%= link_to article.likes.count, article_likes_path(article), method: :post, remote: true, class: 'article__item-like-count' %>
    <%= link_to article_likes_path(article), method: :post, remote: true, class: 'article__item-like-btn' do %>
      <%= icon('fas', 'thumbs-up') %>
    <% end %>
  <% end %>
</div>