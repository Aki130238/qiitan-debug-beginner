<div class="row">
  <div class="col-sm-8 offset-sm-2 mt-4">
    <div class="text-center">
      <h2>QiitanDebugBeginnerへようこそ</h2>
      <p>新規登録して利用を開始しましょう。</p>
    </div>
    <%= simple_form_for(@user, html: { class: 'form-section' }) do |f| %>
      <%= f.error_notification %>
      <div class="form-group">
        <%= f.input :username, autofocus: true, required: false %>
        <%= f.input :email, autocomplete: :email, required: false %>

        <%= f.input :password, autocomplete: 'current-password', hint: '(6文字以上)' %>
        <%= f.input :password_confirmation, autocomplete: 'current-password' %>
      </div>
      <div class="form-group">
        <%= f.submit 'ユーザ登録', class: 'btn btn-primary btn-block btn-lg' %>
      </div>
      <%= render 'shared/links' %>
    <% end %>
  </div>
</div>